@model IEnumerable<WebChurchManagement.Models.Status>

@{
    ViewBag.Title = "Status";
}

<p>
    @Html.ActionLink("Inserir Novo Status", "Inserir")
</p>
<table id="superTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nm_Status)</th>
            <th>@Html.DisplayNameFor(model => model.Desc_Status)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nm_Status)</th>
            <th>@Html.DisplayNameFor(model => model.Desc_Status)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nm_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Desc_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id_Status }) |
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id_Status }) |
                    @Html.ActionLink("Deletar", "Deletar", new { id = item.Id_Status })
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/Shared/DataTable/dataTables.bootstrap.min.css")
    @Scripts.Render("~/Scripts/Shared/DataTable/jquery-1.12.4.js")
    @Scripts.Render("~/Scripts/Shared/DataTable/jquery.dataTables.min.js")
    @Scripts.Render("~/Scripts/Shared/DataTable/dataTables.bootstrap.min.js")
    @Scripts.Render("~/Scripts/Shared/DataTable/superTable.js")
}
