<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Web Church Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/MenuCss.css")

</head>
<body>
    @*Inicio do Bootstrap*@
    <div id="wrapper">
        <div class="overlay"></div>

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <li class="sidebar-brand">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Membros", "Index", "Membros")
                </li>
                <li>
                    @Html.ActionLink("Cargos", "Index", "Cargos")
                </li>
                <li>
                    @Html.ActionLink("Status", "Index", "Status")
                </li>
                <li>
                    <a href="#">Team</a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Works <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="dropdown-header">Dropdown heading</li>
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
                <li>
                    <a href="https://twitter.com/maridlcrmn">Follow me</a>
                </li>
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
            <div class="container" style="width:inherit;">
                <div class="row">
                    <div class="col-lg-12 col-lg-offset-2">
                        <div class="col-md-9">
                            <div class="profile-content">
                                <div class="container body-content" style="width:inherit;">
                                    <div class="panel panel-default">

                                        <div class="panel-heading">
                                            <h2>@ViewBag.Title</h2>
                                        </div>

                                        <div class="panel-body">
                                            @RenderBody()
                                        </div>
                                    </div>
                                    <hr />
                                    <footer>
                                        <p>&copy; @DateTime.Now.Year - Web Church Management</p>
                                    </footer>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    @*Fim do Bootstrap*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/menu.js")
    @Scripts.Render("~/Scripts/global.js")
    @RenderSection("scripts", required: false)

</body>
</html>
